<style>
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh; /* 最低でも画面の高さいっぱいに広がるようにする */
  max-width: 800px; /* コンテナの幅を制限 */
  margin: 20px auto 0; /* コンテナを上部に寄せ、水平方向に中央に配置 */
  padding: 0 20px; /* コンテナの内側の余白 */
}

.recipe {
  text-align: left; /* テキストを左揃えにする */
}

.recipe img {
  max-width: 100%;
  height: auto;
  margin-top: 20px;
}

.add-button {
  margin-top: 20px;
}
</style>

<div class="container">
  <div class="recipe">
    <h1><%= t('recipes.index.title') %></h1>

    <% if @recipe %>
      <h2><%= @recipe.title %></h2> <!-- レシピのタイトルを表示 -->
      <p><%= @recipe.description %></p> <!-- レシピの説明を表示 -->
      <% if @recipe.image_url.present? %>
        <%= image_tag @recipe.image_url, alt: t('recipes.index.recipe.image_alt') %> <!-- 画像があれば表示 -->
      <% else %>
        <p><%= t('recipes.index.no_image_available') %></p> <!-- 画像がない場合のメッセージ -->
      <% end %>
    <% else %>
      <p><%= t('recipes.index.fetch_failed') %></p> <!-- レシピが取得できなかった場合のメッセージ -->
    <% end %>

    <!-- 追加ボタン -->
<div class="add-button">
  <%= link_to t('recipes.index.add_button'), histories_path, class: "btn btn-primary" %>
</div>
  </div>
</div>
